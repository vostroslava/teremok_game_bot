# ===========================================
# Teremok Game Bot - Environment Variables
# ===========================================
# Copy this file to .env and fill in real values

# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# External URL of the web application (via cloudflared/ngrok)
WEB_APP_URL=https://your-tunnel.trycloudflare.com

# Owner's Telegram user ID (can add/remove admins)
# Get via /id command in bot
OWNER_ID=123456789

# Manager's Telegram chat ID (receives notifications if enabled)
MANAGER_CHAT_ID=123456789

# Send notifications to manager (true/false)
# Set to false to avoid spam - admins can use /leads command instead
SEND_NOTIFICATIONS=false

# Channel for subscription check (username without @)
REQUIRED_CHANNEL_USERNAME=your_channel_username

# Enable/disable subscription check (true/false)
CHECK_SUBSCRIPTION_ENABLED=true

# ===========================================
# ADMIN PANEL
# ===========================================
# Secret key for admin panel access
# Generate a random string, e.g.: openssl rand -hex 16
ADMIN_PANEL_SECRET=your_secret_key_here

# ===========================================
# GOOGLE SHEETS INTEGRATION
# ===========================================
# Enable/disable Google Sheets export
GOOGLE_SHEETS_ENABLED=false

# Google Service Account JSON (paste entire JSON as one line)
# Get from: Google Cloud Console > IAM > Service Accounts > Keys
GOOGLE_SERVICE_ACCOUNT_JSON=

# Google Sheets ID (from URL: docs.google.com/spreadsheets/d/<THIS_ID>/edit)
# Create ONE spreadsheet and share with service account email
# The bot will auto-create 2 sheets: "Лиды" and "Тесты"
GOOGLE_SHEETS_LEADS_ID=

# Optional: separate spreadsheet for tests (leave empty to use same spreadsheet)
# GOOGLE_SHEETS_TESTS_ID=

# ===========================================
# SERVER SETTINGS (optional)
# ===========================================
# HOST=0.0.0.0
# PORT=8000
# DB_NAME=teremok.db